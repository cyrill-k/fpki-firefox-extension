{
    "name": "LF-PKI Browser Extension",
    "version": "1.0",
    "manifest_version": 3,
    "description": "LF-PKI browser extension",
    "options_ui": {
        "page": "htmls/options/options.html"
    },      
    "background": {
        "service_worker": "./background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./content/content.js"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "images/icon.png"
        },
        "default_popup": "./popup/popup.html"
    },
    "permissions": [
        "webNavigation",
        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "nativeMessaging",
        "webRequest",
        "tabs",
        "storage",
        "history"
    ],
    "host_permissions": ["*://*/*"],
    "web_accessible_resources": [
        {
            "resources": ["/pages/block.html", "js_lib/wasm/parsePEMCertificates.wasm", "go_wasm/gocachev2.wasm"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';",
        "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'wasm-unsafe-eval'; child-src 'self';"
    },
    "commands":{
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+J"
            }
        }
    }
}
